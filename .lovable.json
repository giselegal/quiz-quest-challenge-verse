{
  "name": "Quiz Quest Challenge Verse",
  "description": "Sistema de quiz interativo com editor Lovable integrado",
  "version": "1.0.0",
  "framework": "react",
  "language": "typescript",
  "packageManager": "npm",
  
  "lovable": {
    "projectId": "quiz-sell-genius",
    "enabled": true,
    "mode": "development"
  },
  
  "directories": {
    "src": "client/src",
    "public": "client/public",
    "build": "dist",
    "components": "client/src/components"
  },
  
  "entry": {
    "main": "client/src/main.tsx",
    "html": "client/index.html"
  },
  
  "scripts": {
    "dev": "npm run dev:lovable",
    "build": "npm run build:lovable",
    "preview": "npm run start"
  },
  
  "ports": {
    "dev": 8080,
    "preview": 8080
  },
  
  "features": {
    "typescript": true,
    "tailwindcss": true,
    "reactRouter": true,
    "dnd": true,
    "forms": true
  },
  
  "environment": {
    "variables": {
      "VITE_LOVABLE_ENABLED": "true",
      "VITE_LOVABLE_PROJECT_ID": "quiz-sell-genius",
      "NODE_ENV": "development"
    }
  },
  
  "components": [
    {
      "name": "QuizCover",
      "path": "client/src/components/lovable/QuizCover.lovable.tsx",
      "category": "Quiz Components"
    },
    {
      "name": "QuizQuestion", 
      "path": "client/src/components/lovable/QuizQuestion.lovable.tsx",
      "category": "Quiz Components"
    },
    {
      "name": "QuizLogic",
      "path": "client/src/components/lovable/QuizLogic.lovable.tsx",
      "category": "Quiz Components"
    },
    {
      "name": "ResultPageEditor",
      "path": "client/src/components/lovable/ResultPageEditor.lovable.tsx",
      "category": "Quiz Components"
    }
  ],
  
  "meta": {
    "tags": ["quiz", "funnel", "conversion", "forms"],
    "category": "productivity",
    "license": "MIT",
    "repository": "https://github.com/quiz-quest-challenge-verse",
    "homepage": "https://quiz-quest-challenge-verse.lovable.app"
  }
}
