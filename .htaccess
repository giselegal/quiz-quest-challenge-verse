# Configuração SPA simplificada para React Router
<IfModule mod_rewrite.c>
    RewriteEngine On
    RewriteBase /
    
    # Redirecionar todas as rotas não-físicas para index.html (SPA)
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ index.html [L,QSA]
</IfModule>

# Tipos MIME essenciais
<IfModule mod_mime.c>
    AddType application/javascript .js .jsx .mjs
    AddType application/json .json
    AddType text/css .css
</IfModule>

# Headers essenciais
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    
    # Desabilitar cache para index.html
    <FilesMatch "index\.html$">
        Header set Cache-Control "no-cache, no-store, must-revalidate"
    </FilesMatch>
</IfModule>
